  "requirements": {
    "system": {
      "os": ["Linux", "macOS", "Windows"],
      "python": ">=3.11",
      "memory": "4GB minimum, 8GB recommended",
      "storage": "2GB for documentation, 10GB for AI services"
    },
    "documentation": {
      "python": ">=3.8",
      "dependencies": ["mkdocs-material", "mkdocs-awesome-pages-plugin", "pymdown-extensions"]
    },
    "ai_services": {
      "python": ">=3.11",
      "database": "PostgreSQL 15+",
      "containers": "Docker 20.10+, Docker Compose 2.0+",
      "dependencies": ["fastapi", "temporal-sdk", "psycopg2", "minio", "pydantic"]
    }
  },
  "installation": {
    "quick_start": {
      "documentation": [
        "git clone https://github.com/your-org/ecomate.git",
        "cd ecomate",
        "pip install -r requirements.txt",
        "mkdocs serve"
      ],
      "ai_services": [
        "git clone https://github.com/your-org/ecomate.git",
        "cd ecomate/ecomate-ai",
        "cp .env.example .env",
        "docker compose up -d",
        "pip install -r requirements.txt",
        "python services/orchestrator/worker.py"
      ]
    }
  },
  "usage": {
    "documentation": {
      "local_development": "mkdocs serve",
      "build_static": "mkdocs build",
