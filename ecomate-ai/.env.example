# Postgres
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=ecomate

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=ecomate-artifacts

# Models
OLLAMA_URL=http://localhost:11434
VERTEX_PROJECT=
VERTEX_LOCATION=us-central1
VERTEX_GEMINI_MODEL=gemini-2.5-pro

# GitHub
DOCS_REPO=AvaPrime/ecomate-docs
GH_TOKEN=

# Google API
GOOGLE_API_KEY=

# Price monitor defaults
CURRENCY_DEFAULT=ZAR
PRICE_DEVIATION_ALERT=0.10   # 10% change highlighted in changelog
REQUEST_TIMEOUT_SEC=20

# Parser behavior settings
PARSER_STRICT=false          # If true, fail on parser errors; if false, fallback to LLM
DEFAULT_CURRENCY=USD         # Default currency for parsed products when not specified

# E-commerce integrations
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_STORE_URL=
WOOCOMMERCE_API_KEY=
WOOCOMMERCE_API_SECRET=
WOOCOMMERCE_STORE_URL=
MEDUSA_API_URL=
MEDUSA_API_KEY=

# Proposal service
PROPOSAL_TEMPLATE_PATH=templates/proposal.html
PROPOSAL_OUTPUT_PATH=output/proposals

# Maintenance service
MAINTENANCE_SCHEDULE_PATH=data/maintenance_schedule.csv

# Compliance service
COMPLIANCE_RULES_PATH=services/compliance/rules

# Telemetry service
TELEMETRY_ALERT_HEADROOM=0.8  # Alert threshold as percentage of expected values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecomate

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# InfluxDB Time-Series Database
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=ecomate
INFLUXDB_BUCKET=iot_data

# Temporal Workflow Engine
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# NATS Messaging
NATS_URL=nats://localhost:4222

# MQTT Broker for IoT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=ecomate
MQTT_PASSWORD=your_mqtt_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your_very_secure_secret_key_here_min_32_chars
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_here
HASHING_SALT=your_hashing_salt_here

# External Weather APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
NASA_POWER_API_URL=https://power.larc.nasa.gov/api

# Monitoring and Observability
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/ecomate.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Development/Production Mode
ENVIRONMENT=development
DEBUG=false

# Feature Flags
ENABLE_IOT_PIPELINE=true
ENABLE_GEOSPATIAL_FEATURES=true
ENABLE_CLIMATE_INTEGRATION=true
ENABLE_REGULATORY_MONITORING=true
ENABLE_REAL_TIME_DASHBOARDS=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
CACHE_TTL_SECONDS=3600

# IoT Device Configuration
IOT_DEVICE_TIMEOUT_SECONDS=30
IOT_MAX_DEVICES_PER_USER=100
IOT_DATA_RETENTION_DAYS=365
IOT_ALERT_COOLDOWN_MINUTES=15