[tool:pytest]
# Pytest configuration for EcoMate AI project

# Test discovery patterns
python_files = test_*.py *_test.py tests.py
python_classes = Test* *Tests
python_functions = test_*

# Test directories
testpaths = tests

# Minimum version requirement
minversion = 7.0

# Add current directory to Python path
addopts = 
    # Coverage options
    --cov=services
    --cov-report=term-missing
    --cov-report=html:htmlcov
    --cov-report=xml:coverage.xml
    --cov-report=json:coverage.json
    --cov-config=.coveragerc
    --cov-fail-under=85
    
    # Output options
    --verbose
    --tb=short
    --strict-markers
    --strict-config
    
    # Test execution options
    --maxfail=10
    --disable-warnings
    
    # HTML report
    --html=test-report.html
    --self-contained-html
    
    # JUnit XML for CI/CD
    --junitxml=junit.xml
    
    # Performance options
    --durations=10
    --durations-min=1.0
    
    # Plugin options
    --asyncio-mode=auto

# Test markers
markers =
    # Test categories
    unit: Unit tests
    integration: Integration tests
    e2e: End-to-end tests
    performance: Performance tests
    
    # Test characteristics
    slow: Slow running tests
    fast: Fast running tests
    
    # Component markers
    parser: Parser component tests
    api: API endpoint tests
    database: Database operation tests
    workflow: Temporal workflow tests
    cache: Redis cache tests
    storage: MinIO storage tests
    
    # Environment markers
    requires_db: Tests requiring database
    requires_redis: Tests requiring Redis
    requires_minio: Tests requiring MinIO
    requires_temporal: Tests requiring Temporal
    requires_network: Tests requiring network access
    
    # Priority markers
    critical: Critical functionality tests
    important: Important functionality tests
    optional: Optional functionality tests
    
    # Stability markers
    stable: Stable tests
    flaky: Potentially flaky tests
    experimental: Experimental tests
    
    # Skip conditions
    skip_ci: Skip in CI environment
    skip_local: Skip in local environment
    windows_only: Run only on Windows
    linux_only: Run only on Linux
    mac_only: Run only on macOS

# Logging configuration
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(name)s: %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

# Log file configuration
log_file = tests.log
log_file_level = DEBUG
log_file_format = %(asctime)s [%(levelname)8s] %(filename)s:%(lineno)d %(funcName)s(): %(message)s
log_file_date_format = %Y-%m-%d %H:%M:%S

# Capture configuration
log_capture = true
log_level = INFO

# Warning filters
filterwarnings =
    # Ignore specific warnings
    ignore::UserWarning
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    
    # Ignore warnings from specific modules
    ignore::pytest.PytestUnraisableExceptionWarning
    ignore::pytest.PytestCollectionWarning
    
    # Ignore asyncio warnings
    ignore:.*asyncio.*:DeprecationWarning
    
    # Ignore SQLAlchemy warnings
    ignore:.*SAWarning.*:sqlalchemy.exc.SAWarning
    
    # Ignore httpx warnings
    ignore:.*httpx.*:DeprecationWarning
    
    # Convert specific warnings to errors
    error::UserWarning:src.*

# Asyncio configuration
asyncio_mode = auto

# Timeout configuration (if pytest-timeout is installed)
timeout = 300
timeout_method = thread

# Temporary directory configuration
tmp_path_retention_count = 3
tmp_path_retention_policy = failed

# Collection configuration
collect_ignore = [
    "setup.py",
    "conftest.py",
    "migrations/",
    "alembic/",
    "scripts/",
    "docs/",
    "build/",
    "dist/",
    ".tox/",
    ".pytest_cache/",
    "htmlcov/",
    "node_modules/",
    "venv/",
    "env/",
    ".venv/",
]

# Doctest configuration
doctest_optionflags = NORMALIZE_WHITESPACE IGNORE_EXCEPTION_DETAIL ELLIPSIS
doctest_ignore_import_errors = true

# Cache configuration
cache_dir = .pytest_cache

# Required plugins
required_plugins = 
    pytest-cov>=4.0.0
    pytest-html>=3.0.0
    pytest-asyncio>=0.21.0