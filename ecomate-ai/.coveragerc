[run]
source = services
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    */.env/*
    */migrations/*
    */node_modules/*
    */static/*
    */media/*
    */locale/*
    */fixtures/*
    */conftest.py
    setup.py
    manage.py
    */settings/*
    */config/*
    */.tox/*
    */build/*
    */dist/*
    */.git/*
    */.pytest_cache/*
    */htmlcov/*
    */coverage.xml
    */.coverage
    */.coverage.*

[report]
show_missing = True
skip_covered = False
skip_empty = False
sort = Cover
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    @overload
    # TYPE_CHECKING
    if TYPE_CHECKING:
    \.\.\.  # pragma: no cover

[html]
directory = htmlcov
title = EcoMate AI Coverage Report

[xml]
output = coverage.xml

[paths]
source = 
    services/
    */services/
    */site-packages/services/

[coverage:run]
branch = True
parallel = True
concurrency = multiprocessing,thread

[coverage:report]
precision = 2
fail_under = 80

[coverage:html]
show_contexts = True
skip_covered = False
skip_empty = False

[coverage:xml]
package_depth = 2